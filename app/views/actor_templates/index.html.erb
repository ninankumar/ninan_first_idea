<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All actors
    </h1>

    <a href="/actors/new" class="btn btn-block btn-outline-secondary">
      Add a new actor
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
          Bio
        </th>

        <th>
          Roles
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @actors.each do |actor| %>
      <tr>
        <!-- Display actor.id start -->
        <td>
          <%= actor.id %>
        </td>
        <!-- Display actor.id end -->

        <!-- Display actor.name start -->
        <td>
          <%= actor.name %>
        </td>
        <!-- Display actor.name end -->

        <!-- Display actor.dob start -->
        <td>
          <%= actor.dob %>
        </td>
        <!-- Display actor.dob end -->

        <!-- Display actor.bio start -->
        <td>
          <%= actor.bio %>
        </td>
        <!-- Display actor.bio end -->

        <!-- Display actor.roles start -->
        <td>
          <%= actor.roles %>
        </td>
        <!-- Display actor.roles end -->

        <!-- Display actor.created_at start -->
        <td>
          <%= time_ago_in_words(actor.created_at) %> ago
        </td>
        <!-- Display actor.created_at end -->

        <!-- Display actor.updated_at start -->
        <td>
          <%= time_ago_in_words(actor.updated_at) %> ago
        </td>
        <!-- Display actor.updated_at end -->

        <td>
          <a href="/actors/<%= actor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
