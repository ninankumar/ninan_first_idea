<form action="/create_role_from_actor" method="post">

  <div class="form-group">
    <label for="movied_id">
      Movied
    </label>

    <%= select_tag(:movied_id, options_from_collection_for_select(Movie.all, :id, :title, @role.movied_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="actors_id" value="<%= @actor.id %>">

  <div class="form-group">
    <label for="characters_id">
      Characters
    </label>

    <input type="text" id="characters_id" name="characters_id" class="form-control" value="<%= @role.characters_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create role
  </button>
</form>
