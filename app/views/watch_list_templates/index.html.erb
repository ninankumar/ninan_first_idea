<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All watch lists
    </h1>

    <a href="/watch_lists/new" class="btn btn-block btn-outline-secondary">
      Add a new watch list
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "watch_list_templates/watch_lists_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Watchlist
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @watch_lists.each do |watch_list| %>
      <tr>
        <td>
          <%= watch_list.id %>
        </td>

        <td>
          <%= watch_list.watchlist_id %>
        </td>

        <td>
          <%= time_ago_in_words(watch_list.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(watch_list.updated_at) %> ago
        </td>

        <td>
          <a href="/watch_lists/<%= watch_list.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @watch_lists, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
