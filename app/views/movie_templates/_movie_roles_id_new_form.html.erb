<form action="/create_role_from_movie" method="post">

  <input type="hidden" name="movied_id" value="<%= @movie.id %>">

  <div class="form-group">
    <label for="actors_id">
      Actors
    </label>

    <%= select_tag(:actors_id, options_from_collection_for_select(Actor.all, :id, :name, @role.actors_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="characters_id">
      Characters
    </label>

    <input type="text" id="characters_id" name="characters_id" class="form-control" value="<%= @role.characters_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create role
  </button>
</form>
